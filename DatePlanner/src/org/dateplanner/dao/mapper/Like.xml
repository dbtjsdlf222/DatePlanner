<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dateplanner.dao.LikeDAO">

	<select id="selectCount" resultType="int" parameterType="int">
		SELECT
		  COUNT(*)
		FROM
		  `like`
		WHERE
		  board_no = #{boardNo}
	</select>
	
	<select id="userCheck" resultType="int" parameterType="int">
		SELECT
		  COUNT(*)
		FROM
		  `like`
		WHERE
		  board_no = #{boardNo}
		  AND
		  user_no = #{userNo}
	</select>
	
	<insert id="insertLike" parameterType="int">
		INSERT INTO 
		  `like`(board_no, user_no)
		VALUES
		  (#{boardNo}, #{userNo})
	</insert>
	
	<delete id="deleteLike" parameterType="String">
		DELETE 
		  FROM `like`
		WHERE 
		  board_no = #{boardNo} 
		  AND 
		  user_no = #{userNo}
	</delete>
</mapper>