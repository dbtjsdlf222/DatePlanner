<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.IBoardDao">

	<select id="selectCount" resultType="int">
		select COUNT(*) from board
	</select>

	<insert id="insertBoard" parameterType="java.util.HashMap">
		insert into board(num,
		name, pass, content, title, file, readCount) values(0
		,#{name},#{pass},#{content},#{title}, #{file}, #{readCount})
	</insert>

	<select id="selectAll" resultType="java.util.HashMap"
		parameterType="int">
		SELECT
		num,name,pass,content,email,readCount,writedate,title,file
		FROM board
		order by num desc
		limit #{start},5

	</select>

	<select id="detail" parameterType="int" resultType="java.util.HashMap">
		select * from
		board where num = #{num}
	</select>

	<select id="searchBoard" parameterType="String" resultType="java.util.HashMap">
		select * from board where title = #{title}
	</select>

	<delete id="deleteBoard" parameterType="java.util.HashMap">
		delete from board where
		num = #{num}
	</delete>

	<update id="updateBoard" parameterType="java.util.HashMap">
		update board set content
		= #{content}, email = #{email}, title = #{title}
		where num = #{num}
	</update>

	<update id="readCountUp" parameterType="int">
		update board set
		readCount = readCount + 1
		where num = #{num}
	</update>

	<select id="search" parameterType="java.util.HashMap"
		resultType="java.util.HashMap">
		select * from board
		where
		<if test="what == 'titleAndContent'.toString()">
			title like '%${whatSearch}%' or content like '%${whatSearch}%'
		</if>
		<if test="what == 'title'.toString()">
			title like '%${whatSearch}%'
		</if>
		<if test="what == 'content'.toString()">
			content like '%${whatSearch}%'
		</if>
		<if test="what == 'name'.toString()">
			name like '%${whatSearch}%'
		</if>
		order by num desc
		<!-- limit #{start},5 -->
	</select>

	<select id="searchCount" parameterType="java.util.HashMap"
		resultType="int">
		select COUNT(*) from board
		where
		<if test="what == 'titleAndContent'.toString()">
			title like '%${whatSearch}%' or content like '%${whatSearch}%'
		</if>
		<if test="what == 'title'.toString()">
			title like '%${whatSearch}%'
		</if>
		<if test="what == 'content'.toString()">
			content like '%${whatSearch}%'
		</if>
		<if test="what == 'name'.toString()">
			name like '%${whatSearch}%'
		</if>
		order by num desc
		limit #{start},5
	</select>



	<!-- 밑은 댓글 -->

	<insert id="insertComment" parameterType="java.util.HashMap">
		insert into comment
		values(0,#{num}, #{name}, #{comment},now())
	</insert>

	<select id="selectComment" parameterType="int" resultType="java.util.HashMap">
		select * from comment where num = #{num}
	</select>

	<delete id="deleteComment" parameterType="int">
		delete from comment
		where commentNum = #{commentNum}
	</delete>

	<update id="updateComment" parameterType="java.util.HashMap">
		update comment set
		comment = #{comment} where commentNum = #{commentNum}
	</update>

	<select id="oneComment" parameterType="String" resultType="java.util.HashMap">
		select * from comment where commentNum = #{commentNum}
	</select>




</mapper>